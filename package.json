{
  "name": "playwright-shared-context-fixture",
  "version": "1.1.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsup ./src/index.ts --dts",
    "lint": "eslint ./src",
    "lint:fix": "pnpm lint --fix",
    "lint:types": "tsc --noEmit",
    "test": "jest --maxWorkers=40% --logHeapUsage",
    "prepublishOnly": "pnpm build",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cubanducko/playwright-shared-context-fixture.git"
  },
  "author": "Ricardo Dom√≠nguez <rdominguez.alvarez.dev@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/cubanducko/playwright-shared-context-fixture#readme",
  "bugs": {
    "url": "https://github.com/cubanducko/playwright-shared-context-fixture/issues"
  },
  "keywords": [
    "playwright",
    "fixtures",
    "context",
    "utility"
  ],
  "devDependencies": {
    "@playwright/test": "1.39.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "12.0.1",
    "@types/jest": "29.5.7",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "eslint": "8.53.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "13.2.3",
    "prettier": "3.0.3",
    "semantic-release": "24.1.3",
    "ts-jest": "29.1.1",
    "tsup": "7.2.0",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "@playwright/test": "^1.26.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm lint && pnpm build && pnpm test"
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": "rc"
      }
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "lint-staged": {
    "src/**/**/*.{ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
